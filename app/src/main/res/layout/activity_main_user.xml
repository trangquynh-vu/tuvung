<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background_light">

    <!-- Câu châm ngôn / lời chào -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💡 Mỗi ngày 5 từ - Thành công sẽ đến!"
        android:textSize="18sp"
        android:textColor="@color/gray_dark"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <!-- Ảnh logo ở phía trên -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo 3T Learn" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎓 Chào mừng bạn đến với 3T Learn"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Các nút chức năng -->
    <Button
        android:id="@+id/btnLearn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📚 Học từ vựng"
        android:backgroundTint="@color/button_yellow_light"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📝 Làm Quiz"
        android:backgroundTint="@color/button_yellow_light"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 Tiến độ học"
        android:backgroundTint="@color/button_yellow_light"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Nút xem hồ sơ -->
    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👤 Xem hồ sơ"
        android:backgroundTint="@color/button_yellow_light"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Phiên bản / động viên ở cuối màn -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📖 Học hôm nay để giỏi ngày mai "
        android:textSize="18sp"
        android:textColor="@color/gray_dark"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>
</LinearLayout>
