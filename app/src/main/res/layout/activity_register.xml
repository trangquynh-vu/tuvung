<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:backgroundTint="@color/edittext_border"
            android:padding="12dp"
            android:minHeight="48dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:backgroundTint="@color/edittext_border"
            android:padding="12dp"
            android:minHeight="48dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Nút Đăng ký -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Đăng ký"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Nút quay lại đăng nhập -->
        <Button
            android:id="@+id/btnGoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Đã có tài khoản? Đăng nhập"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@color/black" />

        <!-- Hình minh họa + khẩu hiệu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="363dp"
                android:layout_height="100dp"
                android:contentDescription="Minh họa học từ vựng"
                android:src="@drawable/logo3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3T Learn - Học từ vựng mỗi ngày!"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
