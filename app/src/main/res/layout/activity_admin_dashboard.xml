<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo ứng dụng -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="12dp"
            android:contentDescription="Logo 3T Learn"
            android:scaleType="fitCenter" />

        <!-- Tiêu đề admin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👑 Admin Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="28dp"
            android:letterSpacing="0.05" />

        <!-- Nút quản lý người dùng -->
        <Button
            android:id="@+id/btnManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👥 Quản lý người dùng"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:paddingVertical="14dp"
            android:elevation="3dp" />

        <!-- Nút quản lý chủ đề -->
        <Button
            android:id="@+id/btnManageTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📚 Quản lý chủ đề"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:paddingVertical="14dp"
            android:elevation="3dp" />

        <!-- Nút quản lý tu vung -->
        <Button
            android:id="@+id/btnManageVocabulary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📚 Quản lý từ vựng"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:paddingVertical="14dp"
            android:elevation="3dp" />

        <!-- Nút quản lý quizz -->
        <Button
            android:id="@+id/btnManageQuizz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📚 Quản lý Quizz"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:paddingVertical="14dp"
            android:elevation="3dp" />

        <!-- Nút đăng xuất -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Đăng xuất"
            android:backgroundTint="@color/button_yellow_light"
            android:textColor="@android:color/black"
            android:paddingVertical="14dp"
            android:elevation="3dp" />

        <!-- Đường kẻ mờ -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_dark"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <!-- Ghi chú -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3T Learn • Ứng dụng học từ vựng thông minh 📖"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:gravity="center"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
