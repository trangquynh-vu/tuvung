<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_yellow_light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Quản lý câu hỏi Quizz"
            app:titleTextColor="@android:color/black"
            app:navigationIcon="@drawable/ic_back" />

        <TextView
            android:text="➕ Thêm câu hỏi mới"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtQuestion"
            android:hint="Câu hỏi"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <EditText
            android:id="@+id/edtOptionA"
            android:hint="Đáp án A"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtOptionB"
            android:hint="Đáp án B"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtOptionC"
            android:hint="Đáp án C"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtOptionD"
            android:hint="Đáp án D"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtCorrectAnswer"
            android:hint="Đáp án đúng (A/B/C/D)"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1" />

        <EditText
            android:id="@+id/edtTopic"
            android:hint="Chủ đề"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCancel"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_yellow_light"
                android:text="Huỷ"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnSave"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_yellow_light"
                android:text="Lưu"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
